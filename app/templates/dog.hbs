{{#if loading}}
    {{loader}}
{{else}}
    {{navbar
        title=model.name
        hideFilter=true
        bigName=true
    }}
    <div class="image-gallery">
            {{#each model.images as |image|}}
                <div class="image-container">
                    <img
                        src={{image.url}}
                        alt={{model.name}}
                        onClick={{action "launchModal" model.name image.url
                    }}>
                </div>
            {{/each}}
        </div>
    <div class="row">
        <div class="col-12 col-md-6 col-lg-4">
            <table class="table table-striped border">
                <tbody>
                    {{pet-attributes
                        attributes=model.pet_attributes
                        showIcon=false
                    }}
                </tbody>
            </table>
        </div>
        <div class="bio col-12 col-md-6 col-lg-8">
            {{#each htmlSafeBios as |bio|}}
                {{bio}}
            {{/each}}
        </div>
    </div>

    {{#if showModal}}
        {{image-modal
            showModal=showModal
            modalTitle=modalTitle
            modalImageUrl=modalImageUrl
        }}
    {{/if}}
{{/if}}