{{#if loading}}
    {{loader}}
{{else}}
    {{header}}

    <div class="filter">
      <h3>Filter Dogs By:</h3>

      {{#bs-form
        as |form|
      }}
          {{form.element
              controlType="checkbox"
              label="Good with Big Dogs"
              property="goodWithBigDogs"
              onChange=(action "toggleGoodWithBigDogs")
          }}
          {{form.element
              controlType="checkbox"
              label="Good with Small Dogs"
              property="goodWithSmallDogs"
              onChange=(action "toggleGoodWithSmallDogs")
          }}
          {{form.element
              controlType="checkbox"
              label="Good with Kids"
              property="goodWithKids"
              onChange=(action "toggleGoodWithKids")
          }}
          {{form.element
              controlType="checkbox"
              label="Good with Cats"
              property="goodWithCats"
              onChange=(action "toggleGoodWithCats")
          }}
      {{/bs-form}}
    </div>

    <ul class="card-container">
        {{#each filteredDogs as |dog|}}
            {{card
                name=dog.name
                description=dog.description
                defaultImage=dog.pet_image
                attributes=dog.pet_attributes
                gender=dog.sex
                launchModal=(action "launchModal")
            }}
        {{/each}}
    </ul>

    <div class="divider">
      <h1>Dogs Available Soon for Adoption</h1>
    </div>

    <ul class="card-container">
        {{#each comingSoonDogs as |dog|}}
            {{card
                name=dog.name
                description=dog.description
                defaultImage=dog.pet_image
                attributes=dog.pet_attributes
                gender=dog.sex
                launchModal=(action "launchModal")
            }}
        {{/each}}
    </ul>
{{/if}}

{{#if showModal}}
    {{image-modal
        showModal=showModal
        modalTitle=modalTitle
        modalImageUrl=modalImageUrl
    }}
{{/if}}